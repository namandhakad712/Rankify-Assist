# Rankify Assist Configuration for TUYA T5AI-Core Board
# This config properly initializes audio hardware

# ===== BOARD SELECTION =====
CONFIG_BOARD_CHOICE_T5AI=y
CONFIG_BOARD_CHOICE_TUYA_T5AI_CORE=y
CONFIG_TUYA_T5AI_BOARD_EX_MODULE_NONE=y

# ===== PROJECT INFO =====
CONFIG_PROJECT_VERSION="2.0.1"
CONFIG_TUYA_PRODUCT_ID="okqfzw6tkrabylcs"

# ===== AI AUDIO CHAT MODE =====
# Use ASR wakeup with free talk mode (like Alexa/Google Assistant)
CONFIG_ENABLE_CHAT_MODE_ASR_WAKEUP_FREE=y
CONFIG_ENABLE_WAKEUP_KEYWORD_NIHAO_TUYA=y

# ===== AUDIO CONFIGURATION =====
# These are CRITICAL - ensure audio subsystem is enabled
CONFIG_ENABLE_AUDIO_CHAT=y

# ===== DISPLAY SETTINGS =====
# Disable display since T5AI-Core doesn't have a screen
CONFIG_ENABLE_CHAT_DISPLAY=n
CONFIG_ENABLE_GUI_STREAM_AI_TEXT=n
CONFIG_ENABLE_LIBLVGL=n
CONFIG_LVGL_ENABLE_TP=n

# ===== BUTTON & LED =====
# Keep these enabled for T5AI-Core hardware
CONFIG_ENABLE_BUTTON=y
CONFIG_ENABLE_LED=y
