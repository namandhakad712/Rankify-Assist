# MCP Device Controller Environment Variables
# Copy this file to .env and fill in your values

# MCP Configuration (from Tuya MCP Management)
MCP_ENDPOINT=wss://YOUR_MCP_ENDPOINT_HERE
MCP_ACCESS_ID=YOUR_ACCESS_ID_HERE
MCP_ACCESS_SECRET=YOUR_ACCESS_SECRET_HERE

# Tuya IoT Cloud API Configuration
TUYA_CLIENT_ID=YOUR_TUYA_CLIENT_ID
TUYA_CLIENT_SECRET=YOUR_TUYA_CLIENT_SECRET
TUYA_API_URL=https://openapi.tuyain.com

# Get credentials from: https://iot.tuya.com/
